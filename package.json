{
  "name": "winter-land-be",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "audit": "pnpm audit --prod",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:migrate:reset": "npx prisma migrate reset --force",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:db:pull": "npx prisma db pull",
    "prisma:db:push": "npx prisma db push",
    "prisma:db:seed": "npx prisma db seed",
    "prisma:validate": "npx prisma validate",
    "seed": "ts-node --project prisma/tsconfig.json prisma/seed.ts",
    "seed:permissions": "ts-node --project prisma/tsconfig.json prisma/seeders/permissions.seed.ts",
    "seed:roles": "ts-node --project prisma/tsconfig.json prisma/seeders/roles.seed.ts",
    "seed:country-codes": "ts-node --project prisma/tsconfig.json prisma/seeders/country-codes.seed.ts",
    "seed:payment-methods": "ts-node --project prisma/tsconfig.json prisma/seeders/payment-methods.seed.ts",
    "seed:users": "ts-node --project prisma/tsconfig.json prisma/seeders/users.seed.ts",
    "seed:categories": "ts-node --project prisma/tsconfig.json prisma/seeders/categories.seed.ts",
    "seed:events": "ts-node --project prisma/tsconfig.json prisma/seeders/events.seed.ts",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "ts-node --project prisma/tsconfig.json prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "slugify": "^1.6.6",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prisma": "6.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}